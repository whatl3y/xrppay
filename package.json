    "bcrypt": "^3.0.8",
    "bluebird": "^3.7.2",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "bunyan-cloudwatch": "^2.2.0",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.3",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "express": "^4.15.2",
    "express-formidable": "^0.1.2",
    "express-session": "^1.15.6",
    "gulp": "^4.0.2",
