{
  "name": "xrppay",
  "version": "0.0.1",
  "author": "Lance Whatley <whatl3y@gmail.com>",
  "description": "Pay for things with temporary credit cards using XRP (Ripple)",
  "engines": {
    "node": "12.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whatl3y/xrppay"
  },
  "scripts": {
    "build": "gulp build",
    "dev": "nodemon --exec 'nf start'",
    "generateXrpAddress": "node dist/tasks/xrpl/generateAddress",
    "migrate": "node dist/tasks/database/migrate",
    "model": "node dist/tasks/database/model",
    "postinstall": "npm run build",
    "resqueRetry": "node dist/tasks/resque/retryFailedJobs",
    "rippleListener": "node dist/bin/ripple_listener",
    "start": "pm2-runtime start ecosystem.config.js",
    "test": "NODE_ENV=test mocha --exit --require @babel/register --recursive './src/**/*.spec.js'",
    "worker": "node dist/bin/resque_worker"
  },
  "devDependencies": {
    "@babel/register": "^7.8.3",
    "foreman": "^3.0.1",
    "ioredis-mock": "^4.8.2",
